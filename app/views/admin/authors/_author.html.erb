<tr>
  <td><%= author.name %></td>
  <td><%= except_text author.description.to_s, 300 %></td>
  <td>
    <%= link_to edit_admin_author_path(author), class: "btn-edit" do %>
      <i class="fa fa-pencil-square-o"></i>
    <% end %>
  </td>
  <td>
    <%= link_to admin_author_path(author),
      method: :delete, class: "btn_delete" do %>
        <i class="fa fa-trash-o"></i>
    <% end %>
  </td>
</tr>
