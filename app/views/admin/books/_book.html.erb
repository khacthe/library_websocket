<tr>
  <td class="smaller-image"><%= image_tag book.image.url if book.image? %></td>
  <td><%= book.name %></td>
  <td><%= book.description %></td>
  <td><%= book.created_at %></td>
  <td>
    <%= link_to edit_admin_book_path(book), class: "btn_edit" do %>
      <i class="fa fa-pencil-square-o"></i>
    <% end %>
  </td>
  <td>
    <%= link_to admin_book_path(book),
      method: :delete, class: "btn_delete" do %>
        <i class="fa fa-trash-o"></i>
    <% end %>
  </td>
</tr>
