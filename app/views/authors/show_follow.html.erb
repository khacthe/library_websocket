<% provide(:title, @title) %>
  <div class="col-md-4">
    <section class="author_info">
      <h1><%= @author.name %></h1>
      <span><%= link_to "view my profile", @author %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats_author" %>
      <% if @authors.any? %>
        <div class="author_avatars">
          <% @authors.each do |author| %>
          <% end %>
        </div>
      <% end %>
    </section>
  </div>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @authors.any? %>
      <ul class="authors follow">
      <% @authors.each do |author| %>
        <li>
          <span><%= link_to author.name, author, class: "author-link" %></span>
        </li>
    <% end %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
