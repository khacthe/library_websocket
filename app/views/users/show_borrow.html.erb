<% provide(:title, @title) %>
<div class="container main borrowing_book">
  <div class="row">
    <table class="table">
    <h2 class="list-title">My list borrowing books</h2>
    <thead>
      <tr>
        <th>Id</th>
        <th>Image</th>
        <th>Book name</th>
        <th>Date from</th>
        <th>Date to</th>
        <th>Status</th>
      </tr>
    </thead>
    <% if @brorrows.any? %>
      <% @brorrows.each do |brorrow| %>
        <% if DateTime.now.to_date  >= brorrow.date_to.to_date %>
          <tr class="danger">
            <td><%= brorrow.id %></td>
            <td class="smaller-image-thum"><%= image_tag brorrow.book.image.url,
              class: "img-responsive" if brorrow.book.image? %></td>
            <td><%= brorrow.book.name %></td>
            <td><%= brorrow.date_from.to_date.strftime("%d-%m-%Y") %></td>
            <td><%= brorrow.date_to.to_date.strftime("%d-%m-%Y") %></td>
            <% if brorrow.status.present?  %>
              <td class="<%= brorrow.status %>"><%= brorrow.status %></td>
            <% else %>
              <td class="waiting">Waiting</td>
            <% end %>
          </tr>
        <% else %>
          <tr class="success">
            <td><%= brorrow.id %></td>
            <td class="smaller-image-thum"><%= image_tag brorrow.book.image.url,
              class: "img-responsive" if brorrow.book.image? %></td>
            <td><%= brorrow.book.name %></td>
            <td><%= brorrow.date_from.to_date.strftime("%d-%m-%Y") %></td>
            <td><%= brorrow.date_to.to_date.strftime("%d-%m-%Y") %></td>
            <% if brorrow.status.present?  %>
              <td class="<%= brorrow.status %>"><%= brorrow.status %></td>
            <% else %>
              <td class="waiting">Waiting</td>
            <% end %>
          </tr>
        <% end %>
      <% end %>
    <% end %>
    </tbody>
  </table>
  </div>
</div>
